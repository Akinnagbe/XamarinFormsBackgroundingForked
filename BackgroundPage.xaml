<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="FormsBackgrounding.BackgroundPage">

	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
                iOS="0, 20, 0, 0" />
	</ContentPage.Padding>

	<StackLayout>
		<Frame BackgroundColor="Gray">
			<StackLayout>
				<Button Text="Start Long Running Task" x:Name="longRunningTask" />
				<Label Text="Ticker" x:Name="ticker" TextColor="Black" />
				<Button Text="Stop Long Running Task" x:Name="stopLongRunningTask" />
			</StackLayout>
		</Frame>
		<Button Text="Start Internet Download" x:Name="download" />
		<Label Text="Status" x:Name="downloadStatus" TextColor="Black" />
		<Image x:Name="catImage" Aspect="AspectFill" HeightRequest="350" WidthRequest="150" />
	</StackLayout>
</ContentPage>